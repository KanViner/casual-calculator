<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_activitity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.kanviner.casualcalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Calc!"
        android:id="@+id/textView" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:columnCount="4"
        android:layout_alignParentStart="true">

        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="⇚"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="√"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="/"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="X"
            style="@style/CalcButtonTheme"/>

        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="7"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="8"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="9"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="-"
            style="@style/CalcButtonTheme"/>

        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="4"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="5"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="6"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="+"
            style="@style/CalcButtonTheme"/>

        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="1"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="2"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="3"
            style="@style/CalcButtonTheme"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="="
            android:layout_rowSpan="2"
            style="@style/CalcButtonTheme"
            android:id="@+id/equallyBtn"/>

        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="0"
            style="@style/CalcButtonTheme"
            android:layout_columnSpan="2"
            android:id="@+id/zeroBtn"/>
        <ru.kanviner.casualcalculator.customviews.CalcButton
            android:text="·"
            style="@style/CalcButtonTheme"/>
    </GridLayout>
</RelativeLayout>
